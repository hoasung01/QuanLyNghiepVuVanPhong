<div align="left">
Kết quả: <%= @dem %> danh sách
</div>
<div id="shadow" class="shadow" >
    <table border ="1" width ="100%" align="center" cellspacing ="0" class="alternative" bgcolor ="white" >
  <tr>
    <th>STT</th>
    <th>Mã bảo lưu</th>
    <th>Tên bảo lưu</th>
    <th>Công văn</th>
    <th>Học kỳ</th>
    <th>Năm học</th>
    <th>Chức năng</th>
  </tr>
<% dem = 1 %>
<% @baoluus.each do |baoluu| %>
  <tr>
    <td>
      <%= dem %>
    </td>
    <td><%= baoluu.MaBaoLuu %></td>
    <td><%= baoluu.TenBaoLuu %></td>
    <td><%= baoluu.congvan.SoCV %></td>
    <td><%= baoluu.HocKy %></td>
    <td><%= baoluu.NamHoc %></td>
    <td> 
          <%= link_to image_tag('view.png',:style=>'height:2em;width:2em;'), baoluu , :style=>"color:#000"%> | 
          <%= link_to image_tag('edit.png'), edit_baoluu_path(baoluu) , :style=>"color:#000"%> | 
          <%= link_to image_tag('delete_1.png'), baoluu, :confirm => 'Bạn có chắc muốn xóa?', :method => :delete , :style=>"color:#000"%>
    </td>
  </tr>
 <% dem = dem + 1 %>
<% end %>
</table>
<div align="left">
Hiển thị: <%= dem - 1 %> / <%= @dem %>
</div>
<br />
</div>
