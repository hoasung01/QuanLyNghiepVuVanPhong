<div id="login" class="login-cont" style="padding: 10px; margin: 10px; width: 70%; height: 65%; top: 15%; left: 15%; overflow: auto" align="center"> 
    <div id="close" class="closebutton" align="right">
    <%= link_to image_tag('closex.jpg'),'/giangviens/new'%>
    </div>
     
    <h1>Danh sách chức vụ</h1>
    <div id="shadow" class="shadow" >
    <table border ="1" width ="100%" align="center" cellspacing ="0" class="alternative" bgcolor ="white" >
      <tr>
        <th> Mã chức vụ</th>
        <th>Tên chức vụ</th>
        <th></th>
      </tr>
      
      <% @chucvus.each do |chucvu| %>
      <tr>
        
        <td><%= chucvu.MaCV %></td>
        <td><%= chucvu.TenCV%></td>
        <td>
          <%= link_to 'Xem', chucvu ,:style =>"color:#000" %> | 
          <%= link_to 'Sửa', edit_chucvu_path(chucvu) ,:style =>"color:#000" %> | 
          <%= link_to 'Xóa', chucvu, :confirm => 'Bạn có chắc muốn xóa?', :method => :delete ,:style =>"color:#000"%>
          
        </td>
      </tr>
    <% end %>
      
    </table>
      

</div>
</div>
<div class="lock-screen" id="lock" style="display:block"></div>
   

