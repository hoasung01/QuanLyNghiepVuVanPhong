      <tr>
        <td><b> Tên chức vụ:</b></td>
        <td><%= @chucvu.TenCV %></td>
      </tr>
      <tr>
        
      </tr>
      <tr>
        <td colspan="3" align="center">
              <%= link_to image_tag('edit.png'), edit_chucvu_path(@chucvu) ,:style=>"color:#000"%> | 
          <%= link_to image_tag('new.png',:style=>"alt:Thêm chức vụ",:alt=>"Thêm chức vụ"), new_chucvu_path ,:style=>"color:#000"%>
        </td>
    </tr>
     </table>
     </fieldset>
</div>    
