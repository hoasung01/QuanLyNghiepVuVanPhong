<%= form_for(@hocbong) do |f| %>
  <% if @hocbong.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@hocbong.errors.count, "Lỗi") %> Không thể lưu thông tin:</h2>

      <ul>
      <% @hocbong.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <h1>Chi tiết học bổng</h1>
<fieldset>
  <table width ="100%" align ="center" >
<!--      <div class="field"> -->
      <tr>
        <td align="left" width="15%"><%= f.label 'Mã học bổng:'%></td>
        <td align="left"><%= f.text_field :MaHocBong, :size => "29x1" %></td>
        
        <td align="left" width="15%"><%= f.label 'Loại học bổng:'%></td>
        <td><%= collection_select(:hocbong, :loaihocbong_id, Loaihocbong.all, :id, :TenLoaiHocBong) %></td>
        
      </tr>
      <tr>
        <td align="left" width="15%"><%= f.label 'Tên danh sách:' %></td>
        <td><%= f.text_field :TenHocBong %></td>

          
        <td align="left" width="15%"><%= f.label 'Học kỳ:' %></td>
        <td><%= f.text_field :HocKy %></td>
      </tr>
      <tr>
        <td align="left" width="15%"><%= f.label 'Công văn số:' %></td>
        <td><%= collection_select(:hocbong, :congvan_id, Congvan.all, :id, :SoCV) %></td>
        
        <td align="left" width="15%"><%= f.label 'Năm học:' %></td>
        <td><%= f.text_field :NamHoc %></td>
      </tr>
      <tr>
        <td align="left" width="15%"><%= f.label 'Nơi cấp:' %></td>
        <td><%= f.text_field :NoiCap %></td>
        
        <td align="left" width="15%"><%= f.label 'Ngày lập:' %></td>
        <td><%= f.date_select :NgayLap,:start_year =>2002,:order =>[:day, :month, :year] %></td>
      </tr>   
      <tr>
        <td align="left"><%= f.label 'Ghi Chú:' %></td>
        <td colspan="4"><%= f.text_area :GhiChu,:size => "80x3"%></td>
      </tr>
  
  </table>
</fieldset>
  <br />
  <div class="actions">
    <%= f.submit 'Lưu lại'%>
  </div>
<br />

