<div id="login" class="login-cont" style="padding: 10px; margin: 10px; width: 55%; height: 65%; top: 15%; left: 20%;overflow: auto" align="center"> 
    <div id="close" class="closebutton" style="right: 10px" align="right">
        <%= link_to image_tag('closex.jpg'),'/giangviens/new'%>
    </div>
    <h1>Chi tiết ngạch</h1>
     <table width ="100%" align ="center" >  
      <tr>
        <td colspan="3">
          <p id="notice"><%= notice %></p>
        </td>
      </tr>
               
      <tr>
        <td><b>Mã ngạch:</b></td>
        <td><%= @ngach.MaNgach%></td>
      </tr>
      
      <tr>
        <td><b> Tên ngạch:</b></td>
        <td><%= @ngach.TenNgach %></td>
      </tr> 
      <tr>
        <td colspan="3" align="center">
            <%= link_to 'Sửa', edit_ngach_path(@ngach) , :style=>"color:#000"%> | 
        
            <%= link_to 'Quay lại', ngaches_path , :style=>"color:#000"%> |
            <%= link_to 'Thêm ngạch', new_ngach_path,  :style=>"color:#000"%>
        </td>
    </tr>
     </table>
  
</div>    
<div class="lock-screen" id="lock" style="display:block"></div>
