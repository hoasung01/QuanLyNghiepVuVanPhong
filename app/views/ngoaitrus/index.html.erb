<div id="login" class="login-cont" style="padding: 10px; margin: 10px; width: 80%; height: 80%; top: 7%; left: 8%; overflow: auto" align="center"> 
    <div id="close" class="closebutton" align="right">
    <%= link_to 'Thêm', new_ngoaitru_path %>
    <%= link_to image_tag('closex.jpg'),'/trangchu'%>
    </div>
  <%= form_tag ngoaitrus_path, :method => 'get' do %>  
     <fieldset>
        <legend>Lọc danh sách ngoại trú</legend>
      <%= text_field_tag :search, params[:search] %> 
      
      <%= submit_tag "Lọc", :name => nil %>
        <%= link_to 'Tìm kiếm nâng cao', '/ngoaitrus/search', :style => "color:#000"  %>
       </fieldset>
    <%end%>
<h1>Danh sách ngoại trú</h1>
<div id="shadow" class="shadow" >
    <table border ="1" width ="100%" align="center" cellspacing ="0" class="alternative" bgcolor ="white" >
  <tr>
    <th>STT</th>
    <th>Mã ngoại trú</th>
    <th>Tên ngoại trú</th>
    <th>Loại ngoại trú</th>
    <th>Công văn</th>
    <th>Học kỳ</th>
    <th>Năm học</th>
    <th>Chức năng</th>

  </tr>

<% @ngoaitrus.each do |ngoaitru| %>
  <tr>
    <th><%= ngoaitru.id %></th>
    <td><%= ngoaitru.MaNgoaiTru %></td>
    <td><%= ngoaitru.TenNgoaiTru %></td>
    <td><%= ngoaitru.loaingoaitru.TenLoaiNgoaiTru %></td>
    <td><%= ngoaitru.congvan.SoCV %></td>
    <td><%= ngoaitru.HocKy %></td>
    <td><%= ngoaitru.NamHoc %></td>
    <td><%= link_to 'Xem', ngoaitru , :style=>"color:#000"%> | 
    <%= link_to 'Sửa', edit_ngoaitru_path(ngoaitru) , :style=>"color:#000"%> | 
    <%= link_to 'Xóa', ngoaitru, :confirm => 'Bạn có chắc muốn xóa?', :method => :delete , :style=>"color:#000"%></td>
  </tr>
<% end %>
</table>

<br />
</div>

<br />
      <div class ="menu-header" style="text-align:center" >
      <%= will_paginate @ngoaitrus %>
      <br />
    </div>
</div>  

<div class="lock-screen" id="lock" style="display:block"></div>

