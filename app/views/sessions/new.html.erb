<div id="login" class="login-cont" style="padding: 10px; margin: 10px; width: 65%; height: 60%; top: 15%; left: 15%; overflow: auto" align="center"> 
    <div id="close" class="closebutton" align="right">
    <%= link_to image_tag('closeit.png'),'/trangchu'%>
    </div>
  <div id="user_nav">
    <% if current_user %>
      Xin chào <%= current_user.email %> | 
      <%= link_to "Đăng xuất", logout_path,:style => "color:#000;" %>
    <% else %>
      <%= link_to "Quay về trang chủ", root_url,:style => "color:#000;" %> &nbsp;&nbsp;hay&nbsp;&nbsp;  
      <%= link_to "Đăng ký", signup_path,:style => "color:#000;" %>
    <% end %>
  </div>
<% flash.each do |name, msg| %>
  <%= content_tag :div, msg, :id => "flash_#{name}" %>
<% end %> 
  
<h1>Đăng nhập</h1>
<br />
<%= form_tag sessions_path do %>
<fieldset style="width: 70%"> 
  <table>
    
    <tr>
      <td rowspan="5">
        <%=image_tag'login.png',:style=>'height:10em;width:10em;'%>
      </td>
      <td><%= label_tag 'Email: ' %></td>
      <td><%= text_field_tag :email, params[:email] %></td>
    </tr>
    <tr>
      <td><%= label_tag 'Mật khẩu: ' %></td>
      <td><%= password_field_tag :password %></td>
    </tr>
    <tr>
      <td colspan="2" align="center" >
      <%= link_to "Quên mật khẩu?", new_password_reset_path,:style => "color:#000;" %>
      </td>  
    </tr>
    <tr>
      <td colspan="2"  align="center" >
      <%= check_box_tag :remember_me, 1, params[:remember_me] %>
      <%= label_tag 'Ghi nhớ mật khẩu' %>
      </td>
    </tr>
    <tr>
      <td colspan="2"  align="center" >
        <div class="actions"><%= submit_tag "Đăng nhập" %></div>
      </td>
    </tr>
    <% end %>
  </table>

</fieldset>
  
</div>
<div class="lock-screen" id="lock" style="display:block"></div> 