<table height="100" align="center">
   
<!--      <div class="field"> -->
     
      <tr>
         <td width="20%" height="33"><b><%= f.label 'Mã sinh viên:'%></b></td>
         <td width="30%"><%= f.text_field :MSSV , :size => "20px"%>  </td>
         <td width="20%"><b>Ngày sinh :</b></td>
       <!-- <td height="33"><%= f.text_field :NgaySinh %></td>-->
        <td width="30%"><%= f.date_select :NgaySinh,:start_year=>1977,:end_year=>Time.now.year,:order=>[:day,:month,:year]%></td>
      </tr>
       <tr>
         <td ><b><%= f.label 'Họ tên :' %></b></td>
         <td><%= f.text_field :HoTenSV, :size => "20px" %></td>
        
        <td height="33"><b>Giới tính :</b></td>
        <td height="33"><%= f.select :GioiTinh, options_for_select([["Nam", "Nam"], ["Nữ", "Nữ"]]) %></td>
      </tr>
       <tr>
         <td height="33"><b><%= f.label 'Địa chỉ :' %></b></td>
         <td><%= f.text_field :DiaChi, :size => "20px"%></td>
         <td height="33"><b><%= f.label 'Lớp:' %></b></td>
          <td height="33"><%= collection_select(:sinhvien, :lop_id, Lop.all, :id, :TenLop) %></td>
      </tr>
      <tr>
        <td height="33"><b><%= f.label 'Số Điện thoại:' %></b></td>
        <td><%= f.text_field :SDT , :size => "20px"%></td>
        <td height="33"><b><%= f.label 'Trình độ đào tạo:' %></b></td>
          <td height="33"><%= collection_select(:sinhvien, :trinhdodaotao_id, Trinhdodaotao.all, :id, :TenTDDT) %></td>
      </tr> 
      
     </table>
  </div>
