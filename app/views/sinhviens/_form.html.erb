<%= form_for (@sinhvien) do |f| %>
      <% if @sinhvien.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@sinhvien.errors.count, "lỗi:") %> Lưu không thành công:</h2>
          <ul>
          <% @sinhvien.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
 
