<div id="login" class="login-cont" style="padding: 10px; margin: 10px; width: 80%; height: 80%; top: 7%; left: 8%; overflow: auto" align="center"> 
    <div id="close" class="closebutton" align="right">
   <%= link_to image_tag('closeit.png'),'/trangchu'%>
    </div>
  <%= form_tag trocaps_path,:remote => true, :method => 'get' do %>  
     <fieldset style="width: 70%">
        <legend>Lọc danh sách trợ cấp</legend>
      <%= text_field_tag :search, params[:search] %> 
      
      <%= submit_tag "Lọc", :name => nil %>
        <%= link_to 'Tìm kiếm nâng cao', '/trocaps/search', :style=> "color:#000"  %>
       </fieldset>
    <%end%>
<h1>Danh sách trợ cấp</h1>
<div align="left">
     
   <%= link_to image_tag('new.png',:alt=>"Thêm danh sách"), new_trocap_path %> Thêm danh sách trợ cấp
     
   </div>
<div id ="trocaps">
        <%= render :partial => 'trocap' %>
      </div>
      <script>
      $(document).ready(function() {
          $('.pagination a').attr('data-remote', 'true');
      });</script>
</div>  

<div class="lock-screen" id="lock" style="display:block"></div>

