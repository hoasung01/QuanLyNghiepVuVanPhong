<div id="login" class="login-cont" style="padding: 10px; margin: 10px; width: 55%; height: 65%; top: 15%; left: 20%;overflow: auto" align="center"> 
    <div id="close" class="closebutton" style="right: 10px" align="right">
        <%= link_to image_tag('closex.jpg'),'/trangchu'%>
    </div>
  <h1>Chi tiết tài khoản</h1>
     <table width ="100%" align ="center" >  
      <tr>
        <td colspan="3">
          <p id="notice"><%= notice %></p>
        </td>
      </tr>
      <tr>
        <td><b>Email:</b></td>
        <td> <%= @user.email %></td>
      </tr>
      <tr>
        <td><b>Mã giảng viên:</b></td>
        <td align="left"><%= @user.giangvien.MaGV %><td>
      </tr>
      <tr>
        <td><b>Họ tên:</b></td>
        <td><%= @user.giangvien.HoTenGV %></td>
      </tr>
      <tr>
        <td><b>Vai trò:</b></td>
        <td><%= @user.role.TenRole %></td>
      </tr>
            
  <tr>
        <td colspan="3" align ="center">
        <%= link_to 'Sửa', edit_user_path(@user) , :style=>"color:#000"%> |
        <%= link_to 'Quay lại', users_path , :style=>"color:#000"%> | 
        <%= link_to 'Thêm', new_user_path , :style=>"color:#000"%>
        </td>
  </tr>
  </table>
  
  
</div>    
<div class="lock-screen" id="lock" style="display:block"></div>

